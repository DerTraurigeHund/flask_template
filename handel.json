{
    "name": "flask_template",
    "version": "0.0.1",
    "description": "Flask template",
    "scripts": {
        "start": "gunicorn -k eventlet -w {WORKERS} -b {HOST}:{PORT} server:app",
        "restart": "kill -9 `lsof -t -i:{PORT}` && gunicorn -k eventlet -w {WORKERS} -b {HOST}:{PORT} server:app",
        "stop": "kill -15 `lsof -t -i:{PORT}`",
        "kill": "kill -9 `lsof -t -i:{PORT}`"
    },
    "config_files": {
        "server": {
            "name": "server config",
            "description": "server config",
            "path": "./config/server.json"
        },
        "mysql": {
            "name": "mysql config",
            "description": "mysql config",
            "path": "./config/mysql.json"
        }
    }
}